<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table>
    <tr>
      <td>
        名前
      </td>
      <td align="right">
        (性)
      </td>
      <td>
        <div class="field">
          <%= f.text_field :last_name, placeholder: "令和" %>
        </div>
      </td>
      <td>
        (名)
      </td>
      <td>
        <div class="field">
          <%= f.text_field :first_name, placeholder: "道子" %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        フリガナ
      </td>
      <td align="right">
        (セイ)
      </td>
      <td>
        <div class="field">
          <%= f.text_field :last_name_kana, placeholder: "レイワ" %>
        </div>
      </td>
      <td>
        (メイ)
      </td>
      <td>
        <div class="field">
          <%= f.text_field :first_name_kana, placeholder: "ミチコ" %>
        </div>
      </td>
    </tr>

    <tr>
      <td>
        メールアドレス
      </td>
      <td align="right"> </td>
      <td>
        <div class="field">
          <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email" %>
        </div>
      </td>
    </tr>


    <tr>
      <td>
        郵便番号(ハイフンなし)
      </td>
      <td align="right">
      </td>
      <td>
        <div class="field">
          <%= f.text_field :postal_code,placeholder: "0000000" %>
        </div>
      </td>
    </tr>


    <tr>
      <td>
        住所
      </td>
      <td align="right"> </td>
      <td colspan="4">
        <div class="field">
           <%= f.text_field :address, size: 50, placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>
      </td>
    </tr>


    <tr>
      <td>
        電話番号(ハイフンなし)
      </td>
      <td align="right"> </td>
      <td>
        <div class="field">
          <%= f.text_field :telephone_number, placeholder: "00000000000" %>
        </div>
      </td>
    </tr>


    <tr>
      <td>
        <% if @minimum_password_length %>
        パスワード(<%= @minimum_password_length %>文字以上)
        <% end %>
      </td>
      <td> </td>
      <td>
        <div class="field">
           <%= f.password_field :password, autocomplete: "new-password" %>
         </div>
      </td>
    </tr>


    <tr>
      <td>
        パスワード(確認用)
      </td>
      <td> </td>
      <td>
        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </td>
    </tr>


    <tr>
      <td> </td>
      <td> </td>
      <td>
        <div class="actions">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      </td>
    </tr>
    </thead>
  </table>


<% end %>
<h2>
  既に登録済みの方
</h2>
<p>
  <%= render "public/shared/links" %>からログインしてください
</p>
