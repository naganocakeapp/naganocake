<div class="container">
  <div class="row">
    <div class="col-8">

      <p>ショッピングカート</p>

      <table class="table", border="3">
        <tr>
          <th>
            商品名
          </th>
          <th>
            単価(税込)
          </th>
          <th>
            数量
          </th>
          <th>
            小計
          </th>
          <th> </th>
        </tr>

        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= cart_item.item.name %>
          </td>
          <td>
            <%= (cart_item.item.with_tax_price %>
          </td>
          <td>
            <%= (cart_item.subtotal) %>
          </td>
        </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>