<div class="container mt-3">
  <p>注文情報入力</p>
  <div class="row">
    <p><b>支払方法</b></p>
  </div>

  <div class="row px-5">
    <%= form_with model: @order,url: public_orders_info_path, method: :post do |f| %>
    <%= f.radio_button :payment_method, "credit_card" %>
    <%= f.label :payment_method_credit_card, "クレジットカード" %>
    <br>
    <%= f.radio_button :payment_method, "transfer" %>
    <%= f.label :payment_method_transfer, "銀行振込" %>
  </div>

  <div class="row">
    <p><b>お届け先</b></p>
  </div>

  <div class="row">
    <span>〒</span><%= current_customer.address %>
  </div>


  <div class="row">
    <div class="col-12 text-center">
    <%= f.submit "確認画面へ進む", class: "btn btn-info" %>
    </div>
  </div>
  <% end %>
</div>