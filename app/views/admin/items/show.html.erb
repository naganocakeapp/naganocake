<div class="container">
  <div class="row mt-3">
    <p>商品詳細</p>
    <div class="col-md-3 mt-5">
      <%= image_tag @items.get_profile_image(300,300) %>
    </div>
    <div class="col-md-7 mt-5">
      <table>
        <tr>
          <td>
            商品名
          </td>
          <td>
            <%= @items.name %>
          </td>
        </tr>

        <tr>
          <td>
            商品説明
          </td>
          <td>
            <%= @items.introduction %>
          </td>
        </tr>

        <tr>
          <td>
            税込価格<br>
            (税抜価格)
          </td>
          <td>
            <%= @items.price %>
          </td>
        </tr>

        <tr>
          <td>
            <%= link_to admin_items_edit_path(@items) do %>
            <button class="btn btn-success">
              編集する
            </button>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
