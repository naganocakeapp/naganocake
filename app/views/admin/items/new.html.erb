<h1>商品新規登録</h1>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1 mt-3 px-5">
      <%= form_with model: @item, url: admin_items_create_path do |f| %>
      <table>
        <tr>
          <td>
            商品画像
          </td>
          <td>
            <div class="form_group">
              <%= f.file_field :image_id, accept: "image/*" %>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            商品名
          </td>
          <td>
            <div class="form_group">
              <%= f.text_field :name, placeholder: "商品名" %>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            商品説明
          </td>
          <td>
            <div class="form_group">
              <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %>
            </div>
          </td>
        </tr>

        <tr>
          <td>
            税抜価格
          </td>
          <td>
            <div class="form_group d-flex flex-row">
              <%= f.text_field :price,placeholder: "1000" %><span>円</span>
            </div>
          </td>
        </tr>

        <tr>
          <td> </td>
          <td>
            <%= f.submit "新規登録", class: "btn btn-success" %>
          </td>
        </tr>
      </table>
      <% end %>

    </div>
  </div>
</div>