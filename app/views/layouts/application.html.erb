<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/2ee7dc101e.js" crossorigin="anonymous"></script>

  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark" style="background: #000000">
        <div class="container">

          <a class="navbar-brand p-3" href="/">
            naganocake
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                 aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

              <% if signed_in? %>

              <li class="nav-item">
                  <%= link_to public_customers_mypage_path, class: 'nav-link text-light' do %>
                  マイページ
                  <% end %>
              </li>


              <li class="nav-item">
                <%= link_to about_path, class: 'nav-link text-light' do %>
                商品一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to about_path, class: 'nav-link text-light' do %>
                カート
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-light' do %>
                ログアウト
                <% end %>
              </li>

              <% else %>

              <li class="nav-item">
                  <%= link_to about_path, class: 'nav-link text-light' do %>
                  About
                  <% end %>
              </li>

              <li class="nav-item">
                  <%= link_to about_path, class: 'nav-link text-light' do %>
                  商品一覧
                  <% end %>
              </li>

              <li class="nav-item">
                  <%= link_to new_customer_registration_path, class: 'nav-link text-light' do %>
                  新規登録
                  <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_customer_session_path, class: 'nav-link text-light' do %>
                ログイン
                <% end %>
              </li>

              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
